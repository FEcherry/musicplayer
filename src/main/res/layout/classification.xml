<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#ffffff"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_part1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/part1"
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:background="#ffffff"
                android:src="@drawable/part1"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:src="@drawable/starempty"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_part2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/part2"
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:src="@drawable/part2"/>

            <ImageButton
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:src="@drawable/starempty"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_part3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@+id/layout_part2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/part3"
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:background="#ffffff"
                android:src="@drawable/part3"/>

            <ImageButton
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:src="@drawable/starempty"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>