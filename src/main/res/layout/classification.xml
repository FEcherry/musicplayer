<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_part1"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/part1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/part1"/>

            <ImageButton
                android:id="@+id/star1"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:background="#ffffff"
                android:src="@drawable/starempty"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_part2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageButton
                android:id="@+id/part2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/part2"/>

            <ImageButton
                android:id="@+id/star2"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:background="#ffffff"
                android:src="@drawable/starempty"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_part3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/layout_part2"
            android:gravity="center">

            <ImageButton
                android:id="@+id/part3"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:src="@drawable/part3"/>

            <ImageButton
                android:id="@+id/star3"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:background="#ffffff"
                android:src="@drawable/starempty"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>